{
    "extends": "@baltpeter/tsconfig",
    "include": ["src/**/*"],
    "exclude": ["**/*.tmp.ts"],
    "compilerOptions": {
        "resolveJsonModule": true,
        "module": "ESNext",
        "moduleResolution": "Bundler"
    },
    "typedocOptions": {
        "plugin": ["typedoc-plugin-markdown"],
        "entryPoints": ["src/index.ts"],
        "out": "docs",
        "readme": "none",
        "excludeNotDocumented": true,
        "includeVersion": false,
        "githubPages": false,
        "gitRevision": "main"
    }
}
